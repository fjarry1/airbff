              <% end %>


              <div class="card-img-top" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= photo %>)">
                <%= link_to specialty_path(specialty) do%>
                <h5 class="card-title"><%= specialty.title %></h5>
                <% end %>
              </div>
              <div class="card-body">
                <p class="card-text"><%= specialty.details %></p>
              </div>
              <div class="card-body">
                <p><%= specialty.price %> / par jour</p>
                <p>reviews</p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

  <div id="map"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  </div>
</div>
