
  <div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random);">
    <div class="container">
      <h1><%= @specialty.title %></h1>
    </div>
  </div>


  <div class="container">
    <div class="infos-show">
      <div class="details-show">
        <p><%= @specialty.details %></p>
        <p class="pricetag"><%= @specialty.price %>$/hour</p>
      </div>
      <div class="booking-placeholder">
        <p>Book a friend</p>

        <%= simple_form_for [@specialty, @reservation] do |f| %>
        <%= f.input :date %>
        <%= f.input :comment %>
        <%= f.submit %>
        <% end %>
      </div>
    </div>

  <%= link_to root_path do %>
    <div class="button">
      <i>Retourner aux spécialités</i>
    </div>
  <% end %>
  </div>
