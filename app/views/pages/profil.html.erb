<%age = Date.today.year - @user.birthdate.year%>
<%age -= 1 if Date.today < @user.birthdate + age.years%>
<div class="p-5 m-5">
  <h1>Bonjour, <%=@user.first_name.capitalize%> <%=@user.last_name.capitalize%> !</h1>
  <div class="row">
    <div class="col-7 me-2">
      <h3><%=age%> ans, <%=@user.city%></h3>
      <p>Rating to add, XX reviews</p>
      <%= link_to "Edit my profile", edit_user_registration_path, class:"btn border", style:"text-decoration: none; width: 30%;"%> <%#= penser a bverifier%>
      <%=cl_image_tag @user.photo.key, height: 300, width: 300, crop: :fill, gravity: :face, class:'rounded-circle my-3'%>
