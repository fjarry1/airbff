          <%=cl_image_tag @user.photo.key, height: 120, width: 120, crop: :fill, gravity: :face, class:'m-1'%>
          <%=cl_image_tag @user.photo.key, height: 120, width: 120, crop: :fill, gravity: :face, class:'m-1'%>
        </div>
      </div>
    </div>
  </div>
</div>
