      <p class="fs-6"><%=@user.description%></p>
      <% if @user.specialties.first%>
        <h3 class="my-1">Mes activit√©es favorites</h3>
        <div class="d-flex">
        <%@user.specialties.each do |service|%>
          <p class="me-5"><%=service.title%></p>
        <% end %>
        </div>
      <% end %>
    </div>
    <div class="ms-2 col-4">
      <h2>Photos</h2>
